@model CoverType

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">حذف نوع پوشش</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">بازگشت به لیست</a>
        <button type="submit" class="btn btn-outline-danger" style="width:150px">حذف</button>
    </div>
</form>