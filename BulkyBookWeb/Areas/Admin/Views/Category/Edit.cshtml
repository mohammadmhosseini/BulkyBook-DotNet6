@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">ویرایش دسته بندی</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="mb-3">
            <label asp-for="Name">نام</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">ترتیب نمایش</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">بازگشت به لیست</a>
        <button type="submit" class="btn btn-outline-primary" style="width:150px">ویرایش</button>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}