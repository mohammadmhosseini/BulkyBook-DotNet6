@model Category

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">حذف دسته بندی</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">نام</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">ترتیب نمایش</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">بازگشت به لیست</a>
        <button type="submit" class="btn btn-outline-danger" style="width:150px">حذف</button>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}